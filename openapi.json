openapi: 3.0.0
info:
  title: API de Usuarios
  version: 1.0.0
  description: API para manejar usuarios del sistema

servers:
  - url: https://api.miempresa.com/v1

paths:
  /usuarios:
    get:
      summary: Obtener todos los usuarios
      responses:
        '200':
          description: Lista de usuarios
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/Usuario'

    post:
      summary: Crear un nuevo usuario
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/Usuario'
      responses:
        '201':
          description: Usuario creado

components:
  schemas:
    Usuario:
      type: object
      properties:
        id:
          type: integer
          example: 123
        nombre:
          type: string
          example: Juan PÃ©rez
        email:
          type: string
          example: juan@ejemplo.com
